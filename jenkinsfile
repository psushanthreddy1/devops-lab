pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/psushanthreddy1/devops-lab.git'
            }
        }
        stage('Deploy') {
            steps {
                bat '''
                    if not exist deployed_html mkdir deployed_html
                    copy *.html deployed_html\\
                '''
            }
        }
    }
    post {
        success {
            publishHTML(target: [
                allowMissing: false,
                keepAll: true,
                reportDir: 'deployed_html',
                reportFiles: 'form.html',
                reportName: 'My Webpage'
            ])
        }
    }
}
